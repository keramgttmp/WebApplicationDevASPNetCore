@model IEnumerable<WA4.ViewModels.CategoryProductsViewModel>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model != null)

{
    IEnumerable<WA4.ViewModels.CategoryProductsViewModel> vCategoryProducts = Model;


    @foreach (var lista in vCategoryProducts)
    {

        <div class="row">
            <div class="col-12">
                <h2>Products</h2>

                <section>
                    <h3>@lista.CategoryName</h3>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>QuantityPerUnit</th>
                                <th>Price</th>
                                <th>Stock</th>
                            </tr>
                        </thead>
                        @foreach (var item in lista.Items)
                        {
                       <tbody>
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.QuantityPerUnit</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.UnitsInStock</td>
                            </tr>
                        </tbody>
                        }
                        <tfoot>
                            <tr>
                                <td colspan="4">
                                    Items<span class="badge"> @lista.Items.Count</span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </section>
            </div>
        </div>
    }
}