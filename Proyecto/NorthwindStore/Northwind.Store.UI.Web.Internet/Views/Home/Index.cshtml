@model ProductViewModel
@{
    ViewData["Title"] = "Home Page";
}
<h3>Listado de productos disponibles</h3>
<form method="get">
    <input asp-for="Filter" placeholder="Type filter here" />
    <button type="submit">Buscar</button>
</form>

@if (Model != null)
{
    <ul class="list-group">
        @foreach (var p in Model.Products)
        {
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@p.ProductId">@p.ProductName</a>
                <p>Nombre @p.ProductName</p>
                <p>Precio Unit. @p.UnitPrice</p>
                <p>Categoría @p.Category</p>
            </li>
        }
    </ul>

}
